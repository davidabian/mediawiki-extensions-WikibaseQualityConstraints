<?xml version="1.0"?>
<ruleset name="Wikibase">
	<rule ref="vendor/wikibase/wikibase-codesniffer/Wikibase" />

	<!-- Exceptions -->

	<rule ref="Generic.Files.LineLength">
		<properties>
			<!-- FIXME: Should be lowered to at least 140. -->
			<property name="lineLimit" value="166" />
			<property name="absoluteLineLimit" value="166" />
		</properties>
	</rule>

	<!-- Additions -->

	<!-- Metrics are intentionally not part of the base Wikibase CodeSniffer rule set. -->
	<rule ref="Generic.Metrics.CyclomaticComplexity" />
	<rule ref="Generic.Metrics.NestingLevel" />

	<!-- TODO: Move to the Wikibase CodeSniffer library. -->
	<rule ref="Squiz.WhiteSpace.CastSpacing" />

	<file>.</file>
</ruleset>
