<?xml version="1.0"?>
<ruleset name="Wikibase">
	<rule ref="vendor/wikibase/wikibase-codesniffer/Wikibase">
		<exclude name="Generic.Arrays.DisallowLongArraySyntax" />

		<!-- FIXME: The following should all be fixed. -->
		<exclude name="MediaWiki.WhiteSpace.SpaceyParenthesis" />
		<exclude name="PSR1.Classes.ClassDeclaration" />
		<exclude name="Squiz.ControlStructures.ControlSignature" />
	</rule>

	<!-- Exceptions -->

	<rule ref="Generic.Files.LineLength">
		<properties>
			<!-- FIXME: Should be lowered to at least 140. -->
			<property name="lineLimit" value="391" />
			<property name="absoluteLineLimit" value="391" />
		</properties>
	</rule>

	<!-- Additions -->

	<!-- Metrics are intentionally not part of the base Wikibase CodeSniffer rule set. -->
	<rule ref="Generic.Metrics.CyclomaticComplexity">
		<properties>
			<!-- FIXME: Should be lowered to the standard of 10. -->
			<property name="complexity" value="13" />
		</properties>
	</rule>
	<rule ref="Generic.Metrics.NestingLevel" />

	<!-- TODO: Move to the Wikibase CodeSniffer library. -->
	<rule ref="Squiz.WhiteSpace.CastSpacing" />

	<file>.</file>
</ruleset>
